{
  "name": "he-thong-quan-tri-xe-tai",
  "version": "1.0.0",
  "description": "Hệ thống quản trị nội bộ cho công ty xe tải",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "vite build",
    "package": "npm run build && electron-builder",
    "dev": "vite"
  },
  "dependencies": {
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.4",
    "vite": "^5.3.1"
  },
  "author": "Your Company Name",
  "license": "UNLICENSED",
  "build": {
    "appId": "com.congtyxetai.quantri",
    "productName": "He Thong Quan Tri Xe Tai",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true
    }
  }
}
